{
  "openapi": "3.0.0",
  "info": {
    "title": "Meeting Intelligence API",
    "version": "1.0.0",
    "description": "APIs for Meeting Management and Real-Time Intelligence."
  },
  "servers": [
    {
      "url": "https://api.example.com",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Meetings",
      "description": "Meeting Management"
    },
    {
      "name": "Realtime",
      "description": "Real-Time Intelligence for meetings"
    }
  ],
  "paths": {
    "/meetings": {
      "get": {
        "tags": ["Meetings"],
        "summary": "List meetings",
        "operationId": "listMeetings",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "to",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of meetings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Meeting"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Meetings"],
        "summary": "Create a meeting",
        "operationId": "createMeeting",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMeetingRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Meeting created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Meeting"
                }
              }
            }
          }
        }
      }
    },
    "/meetings/{id}": {
      "get": {
        "tags": ["Meetings"],
        "summary": "Get meeting by id",
        "operationId": "getMeetingById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Meeting"
                }
              }
            }
          },
          "404": {
            "description": "Meeting not found"
          }
        }
      },
      "patch": {
        "tags": ["Meetings"],
        "summary": "Update a meeting",
        "operationId": "updateMeeting",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateMeetingRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Meeting updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Meeting"
                }
              }
            }
          }
        }
      }
    },
    "/meetings/{id}/insights": {
      "get": {
        "tags": ["Realtime"],
        "summary": "Get real-time insights for a meeting",
        "operationId": "getMeetingInsights",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Real-time meeting insights",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeetingInsights"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Meeting": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "status": {
            "type": "string",
            "enum": ["scheduled", "live", "completed", "cancelled"]
          }
        },
        "required": ["id", "title", "startTime", "status"]
      },
      "CreateMeetingRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["title", "startTime"]
      },
      "UpdateMeetingRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "nullable": true
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "MeetingInsights": {
        "type": "object",
        "properties": {
          "sentimentScore": {
            "type": "number",
            "format": "float"
          },
          "talkTimeDistribution": {
            "type": "object",
            "additionalProperties": {
              "type": "number",
              "format": "float"
            }
          },
          "actionItems": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["sentimentScore", "talkTimeDistribution"]
      }
    }
  }
}


